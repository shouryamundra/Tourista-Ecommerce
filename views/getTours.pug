extends base

block content
    main.main#tour__page
        .card-container
            each tour in tours
                .card
                    .card__header
                        .card__picture
                            .card__picture-overlay &nbsp;
                            img.card__picture-img(src=`img/tours/${tour.imageCover}`, alt=`${tour.name}`)
                        h3.heading-tertirary
                            span= tour.name
                    .card__details
                        h4.card__sub-heading= `${tour.difficulty} ${tour.duration}-day tour`
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-map-pin')
                            span= tour.startLocation.description
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-calendar')
                            span= tour.startDates[0].toLocaleString('en-US', {month:'long', year: 'numeric'})
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-flag')
                            span= `${tour.locations.length} stops`
                        .card__data
                            svg.card__icon
                                use(xlink:href='/img/icons.svg#icon-user')
                            span= `${tour.maxGroupSize} people`
                    .card__details
                        form.form.form--tour
                            .form__group.ma-bt-md#summary__section
                                label.form__label(for='summary') Summary
                                textarea#summary.form__input(type='text' cols="200" rows="1" maxlength="100"  required disabled)= `${tour.summary}`
                                 
                    .card__footer
                        button.btn-delete.btn.btn--red.btn--small(data-tour-id=`${tour._id}`) Remove
                        button.btn-update.btn.btn--green.btn--small(data-tour-id=`${tour._id}`) Update